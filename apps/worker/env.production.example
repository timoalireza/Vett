# Production Environment Variables for Worker
# Copy this to .env.production and fill in all values

NODE_ENV=production

# --- Database ---
# Production PostgreSQL connection string (same as API)
DATABASE_URL=postgresql://postgres:YOUR_STRONG_PASSWORD@your-db-host:5432/vett

# --- Redis ---
# Production Redis connection string (same as API)
REDIS_URL=redis://your-redis-host:6379

# --- External API Keys ---
# OpenAI API key (required)
OPENAI_API_KEY=sk-proj-YOUR_KEY

# Brave Search API key (optional but recommended)
BRAVE_SEARCH_API_KEY=YOUR_KEY

# Serper.dev API key (optional but recommended)
SERPER_API_KEY=YOUR_KEY

# Google Fact Check Tools API key (optional)
GOOGLE_FACT_CHECK_API_KEY=YOUR_KEY

# --- Social Media APIs (Optional - enhances extraction quality) ---
# Twitter API v2
TWITTER_API_KEY=YOUR_KEY
TWITTER_API_SECRET=YOUR_SECRET
TWITTER_BEARER_TOKEN=YOUR_TOKEN

# Instagram Graph API
INSTAGRAM_APP_ID=YOUR_APP_ID
INSTAGRAM_APP_SECRET=YOUR_SECRET
INSTAGRAM_ACCESS_TOKEN=YOUR_TOKEN

# Meta/Threads API
META_APP_ID=YOUR_APP_ID
META_APP_SECRET=YOUR_SECRET
THREADS_ACCESS_TOKEN=YOUR_TOKEN

# RapidAPI (Alternative third-party scraper APIs)
RAPIDAPI_KEY=YOUR_KEY
RAPIDAPI_INSTAGRAM_HOST=YOUR_HOST
RAPIDAPI_TWITTER_HOST=YOUR_HOST
RAPIDAPI_THREADS_HOST=YOUR_HOST

# Unsplash API (for finding high-quality images)
UNSPLASH_ACCESS_KEY=YOUR_KEY

