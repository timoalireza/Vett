{
  "name": "vett-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsup --config tsup.config.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:generate": "node ../../scripts/drizzle.mjs generate --config ../../drizzle.config.ts",
    "db:migrate": "node ../../scripts/drizzle.mjs push --config ../../drizzle.config.ts",
    "db:studio": "node ../../scripts/drizzle.mjs studio --config ../../drizzle.config.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@clerk/backend": "^2.23.0",
    "@clerk/fastify": "^2.6.2",
    "@fastify/compress": "^7.0.0",
    "@fastify/cors": "^8.4.2",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "8.3.1",
    "@fastify/rate-limit": "^8.1.1",
    "@fastify/static": "^6.12.0",
    "@sentry/node": "^10.26.0",
    "@sentry/profiling-node": "^10.26.0",
    "@sinclair/typebox": "^0.32.35",
    "@vett/shared": "workspace:*",
    "bullmq": "^5.7.8",
    "dataloader": "^2.2.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.39.1",
    "fastify": "^4.27.2",
    "fastify-plugin": "^4.5.1",
    "graphql": "^16.9.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^1.1.0",
    "ioredis": "^5.4.1",
    "mercurius": "^12.1.0",
    "openai": "^4.68.4",
    "pg": "^8.12.0",
    "pino": "^9.3.0",
    "pino-pretty": "^11.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "@types/pino-pretty": "^5.0.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "drizzle-kit": "^0.30.3",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "supertest": "^7.1.4",
    "tsup": "^8.1.0",
    "tsx": "^4.16.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
